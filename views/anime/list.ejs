          <a href="/AnimeList/add" class="btn btn-primary" role="button"></a>
              <i class= "fas fa-plus-circle"></i> Add a New Anime to list </a>
        <br>
      <table class= "table table-bordered table-striped table-hover">
      <tr class="d-flex">
        <th class ="text-center col-2">Title</th>
        <th class ="text-center col-2">Studio</th>
        <th class ="text-center col-1">Year</th>

        </td>
      <% for(let i=0; i< AnimeList.length; i++) { %>
          <tr class="d-flex">
            <td class ="text-center col-2"><%= AnimeList[i].title %></td>
            <td class ="text-center col-2"><%= AnimeList[i].studio %></td>
            <td class ="text-center col-1"><%= AnimeList[i].year %></td>
            <td class ="text-center col-1">
              <a href="/animelist/edit/<%= AnimeList[i]._id %>"
                class="btn btn-primary">
                <i class="fas fa-pencil-all"></i> Edit </td>
            </td>
            <td class ="text-center col-1">
                <a href="/animelist/delete/<%= AnimeList[i]._id %>"
                  class="btn btn-danger">
                  <i class="fas fa-trash-alt"></i> Delete </td>
                </td>

            

          </tr>
        <% } %>
