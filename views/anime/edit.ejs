<%- include ../partials/header.ejs %>
<%- include('partials/navbar.ejs') %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title%></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">title</label>
                    <input type="text" class="form-control"
                    id=nameTextField
                    placeholder = "Enter Anime Name"
                    title="title" required>
                </div>

            
                 <div class="form-group">
                    <label for="studioTextField">studio</label>
                    <input type="text" class="form-control"
                    id=nameTextField
                    placeholder = "Enter Studio name"
                    title="studio" required>
                </div>

                <div class="form-group">
                    <label for="yearTextField">year</label>
                    <input type="text" class="form-control"
                    id=nameTextField
                    placeholder = "Enter year"
                    title="year" required>
                </div>
            <button class="button" type="submit">
                <i class="fas fa-eddit"></i> Submit</button>

                <a href="/anime" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel </a>


            </form>
        </div>
    </div>
</div>