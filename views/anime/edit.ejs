<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>


<!-- edit the content to the table -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Title</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="title"
                    name="title" 
                    value="<%= Anime.title %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="studioTextField">Studio</label>
                    <input type="text" class="form-control"
                    id="studioTextField"
                    placeholder="name of production studio"
                    name="studio" 
                    value="<%= Anime.studio %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Year</label>
                    <input type="text" class="form-control"
                    id="yearTextField"
                    placeholder="year of brodcast"
                    name="year" 
                    value="<%= Anime.year %>"
                    required>
                </div>
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/animelist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
  <%- include('../partials/footer.ejs') %>